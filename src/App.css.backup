/* AI SEO Suggestions Section */
.seo-suggestions-section {
  margin-top: 2rem;
  padding: 2rem;
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.05) 0%, rgba(232, 121, 249, 0.05) 100%);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.seo-header {
  text-align: center;
  margin-bottom: 2rem;
}

.seo-title {
  font-size: 2rem;
  font-weight: 700;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
}

.seo-subtitle {
  color: rgba(255, 255, 255, 0.6);
  font-size: 1rem;
}

.loading-seo {
  text-align: center;
  padding: 4rem 2rem;
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.08) 0%, rgba(232, 121, 249, 0.08) 100%);
  border-radius: 16px;
  border: 2px dashed rgba(100, 108, 255, 0.3);
}

.loading-seo .spinner {
  width: 60px;
  height: 60px;
  border: 5px solid rgba(255, 255, 255, 0.1);
  border-top: 5px solid #646cff;
  border-right: 5px solid #e879f9;
  border-radius: 50%;
  animation: spin 1s ease-in-out infinite;
  margin: 0 auto 1.5rem;
  filter: drop-shadow(0 0 10px rgba(100, 108, 255, 0.5));
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
    border-top-color: #646cff;
    border-right-color: #e879f9;
  }
  50% {
    border-top-color: #e879f9;
    border-right-color: #646cff;
  }
  100% { 
    transform: rotate(360deg); 
    border-top-color: #646cff;
    border-right-color: #e879f9;
  }
}

.loading-seo p {
  color: rgba(255, 255, 255, 0.8);
  font-size: 1.1rem;
  font-weight: 500;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: pulse-text 2s ease-in-out infinite;
  margin-bottom: 0.5rem;
}

.loading-subtext {
  font-size: 0.9rem !important;
  color: rgba(255, 255, 255, 0.5) !important;
  background: none !important;
  -webkit-text-fill-color: rgba(255, 255, 255, 0.5) !important;
  animation: none !important;
  margin-top: 0.5rem;
}

@keyframes pulse-text {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.seo-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.seo-score-card {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.1) 0%, rgba(232, 121, 249, 0.1) 100%);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 2rem;
  text-align: center;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.score-circle {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
  box-shadow: 0 10px 40px rgba(100, 108, 255, 0.3);
  position: relative;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.score-number {
  font-size: 3rem;
  font-weight: 700;
  color: white;
  line-height: 1;
}

.score-label {
  font-size: 1.2rem;
  color: rgba(255, 255, 255, 0.9);
}

.score-text {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.seo-suggestion {
  background: rgba(0, 0, 0, 0.4);
  padding: 1.5rem;
  border-radius: 12px;
  border-left: 4px solid #646cff;
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow-wrap: break-word;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.95rem;
  font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  max-height: 600px;
  overflow-y: auto;
}

.seo-suggestion::-webkit-scrollbar {
  width: 8px;
}

.seo-suggestion::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.seo-suggestion::-webkit-scrollbar-thumb {
  background: rgba(100, 108, 255, 0.5);
  border-radius: 4px;
}

.seo-suggestion::-webkit-scrollbar-thumb:hover {
  background: rgba(100, 108, 255, 0.7);
}

.ai-tag {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.2) 0%, rgba(232, 121, 249, 0.2) 100%);
  border: 1px solid rgba(100, 108, 255, 0.3);
  transition: all 0.3s ease;
}

.ai-tag:hover {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.3) 0%, rgba(232, 121, 249, 0.3) 100%);
  border-color: rgba(100, 108, 255, 0.5);
  transform: translateY(-2px);
}

.ai-hashtag {
  background: linear-gradient(135deg, rgba(232, 121, 249, 0.2) 0%, rgba(192, 132, 252, 0.2) 100%);
  border: 1px solid rgba(232, 121, 249, 0.3);
  transition: all 0.3s ease;
}

.ai-hashtag:hover {
  background: linear-gradient(135deg, rgba(232, 121, 249, 0.3) 0%, rgba(192, 132, 252, 0.3) 100%);
  border-color: rgba(232, 121, 249, 0.5);
  transform: translateY(-2px);
}

.tips-card {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.08) 0%, rgba(232, 121, 249, 0.08) 100%);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.tip-item {
  display: flex;
  gap: 1rem;
  align-items: flex-start;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.tip-item:hover {
  background: rgba(255, 255, 255, 0.05);
  transform: translateX(5px);
}

.tip-number {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  min-width: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  color: white;
  font-weight: 700;
  font-size: 0.9rem;
}

.tip-text {
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  font-size: 0.95rem;
}

.seo-placeholder {
  text-align: center;
  padding: 3rem;
  color: rgba(255, 255, 255, 0.5);
  font-size: 1rem;
}
