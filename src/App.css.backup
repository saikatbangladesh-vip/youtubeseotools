/* Root & Base */
* {
  -webkit-tap-highlight-color: rgba(100, 108, 255, 0.2);
  -webkit-touch-callout: none;
}

html {
  scroll-behavior: smooth;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
}

.app {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  color: #ffffff;
  position: relative;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Background Glow Effects */
.glow-effect {
  position: fixed;
  pointer-events: none;
  z-index: 0;
}

.glow-top {
  top: -200px;
  right: -200px;
  width: 800px;
  height: 800px;
  background: radial-gradient(circle, rgba(100, 108, 255, 0.1) 0%, transparent 70%);
  animation: pulse 8s ease-in-out infinite;
}

.glow-bottom {
  bottom: -150px;
  left: -150px;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(232, 121, 249, 0.1) 0%, transparent 70%);
  animation: pulse 6s ease-in-out infinite reverse;
}

@keyframes pulse {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

/* Container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* Header */
.header {
  text-align: center;
  margin-bottom: 60px;
  animation: fadeIn 0.8s ease-out;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  background: rgba(100, 108, 255, 0.15);
  border: 1px solid rgba(100, 108, 255, 0.3);
  border-radius: 20px;
  color: #a8b1ff;
  font-size: 0.9rem;
  font-weight: 500;
  margin-bottom: 20px;
  backdrop-filter: blur(10px);
}

.title {
  font-size: 4rem;
  font-weight: 700;
  margin: 20px 0;
  background: linear-gradient(135deg, #ffffff 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
}

.subtitle {
  font-size: 1.5rem;
  font-weight: 600;
  margin: 15px 0;
  background: linear-gradient(135deg, #e879f9 0%, #a8b1ff 50%, #646cff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.description {
  font-size: 1.2rem;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 15px;
}

/* Input Section */
.input-section {
  max-width: 800px;
  width: 100%;
  margin: 0 auto 60px;
  animation: fadeIn 1s ease-out;
}

.search-type-selector {
  display: flex;
  gap: 12px;
  justify-content: center;
  margin-bottom: 24px;
}

.type-btn {
  padding: 12px 24px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(100, 108, 255, 0.2);
  border-radius: 12px;
  color: rgba(255, 255, 255, 0.7);
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  min-height: 44px;
  touch-action: manipulation;
  user-select: none;
}

.type-btn:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(100, 108, 255, 0.4);
  transform: translateY(-2px);
}

.type-btn.active {
  background: linear-gradient(135deg, #646cff 0%, #535bf2 100%);
  border-color: #646cff;
  color: #ffffff;
  box-shadow: 0 4px 15px rgba(100, 108, 255, 0.3);
}

.input-wrapper {
  display: flex;
  gap: 12px;
  align-items: center;
}

.input-field {
  flex: 1;
  padding: 16px 24px;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(100, 108, 255, 0.3);
  border-radius: 12px;
  color: #ffffff;
  font-size: 1rem;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.input-field:focus {
  outline: none;
  border-color: #646cff;
  box-shadow: 0 0 20px rgba(100, 108, 255, 0.3);
  background: rgba(255, 255, 255, 0.08);
}

.analyze-btn {
  padding: 16px 32px;
  background: linear-gradient(135deg, #646cff 0%, #535bf2 100%);
  border: none;
  border-radius: 12px;
  color: #ffffff;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(100, 108, 255, 0.3);
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  min-height: 48px;
  touch-action: manipulation;
  user-select: none;
}

.analyze-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(100, 108, 255, 0.5);
}

.analyze-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Loading Spinner */
.spinner {
  display: inline-block;
  width: 24px;
  height: 24px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Error Message */
.error-message {
  margin-top: 16px;
  padding: 16px 24px;
  background: rgba(239, 68, 68, 0.15);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 12px;
  color: #fca5a5;
  text-align: center;
  backdrop-filter: blur(10px);
  animation: fadeIn 0.3s ease-out;
}

/* Search Results */
.search-results {
  margin-bottom: 40px;
  animation: fadeIn 0.6s ease-out;
}

.search-results-title {
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 30px;
  text-align: center;
  background: linear-gradient(135deg, #ffffff 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 24px;
}

.result-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(100, 108, 255, 0.05) 100%);
  border: 2px solid rgba(100, 108, 255, 0.25);
  border-radius: 16px;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  position: relative;
  touch-action: manipulation;
  -webkit-tap-highlight-color: transparent;
}

.result-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #646cff, #e879f9);
  transform: scaleX(0);
  transition: transform 0.4s ease;
  z-index: 1;
}

.result-card:hover::before {
  transform: scaleX(1);
}

.result-card:hover {
  transform: translateY(-8px);
  border-color: rgba(100, 108, 255, 0.5);
  box-shadow: 0 12px 40px rgba(100, 108, 255, 0.3);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(100, 108, 255, 0.08) 100%);
}

.result-thumbnail {
  width: 100%;
  height: 240px;
  object-fit: contain;
  background: rgba(0, 0, 0, 0.5);
  transition: all 0.4s ease;
}

.result-card:hover .result-thumbnail {
  transform: scale(1.05);
}

.result-info {
  padding: 20px;
  background: rgba(0, 0, 0, 0.2);
}

.result-title {
  font-size: 1.05rem;
  font-weight: 700;
  margin-bottom: 12px;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  min-height: 2.8em;
}

.result-channel {
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 6px;
}

.result-channel::before {
  content: 'ðŸ“º';
  font-size: 0.9rem;
}

.result-date {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.5);
  display: inline-block;
  padding: 4px 10px;
  background: rgba(100, 108, 255, 0.15);
  border-radius: 12px;
  font-weight: 500;
}

/* Video Details */
.video-details {
  animation: fadeIn 0.8s ease-out;
}

.video-player-container {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 30px;
  border: 1px solid rgba(100, 108, 255, 0.2);
  backdrop-filter: blur(10px);
}

.video-player-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.video-info {
  text-align: center;
  margin-bottom: 40px;
}

.video-title {
  font-size: clamp(1rem, 3.5vw, 2rem);
  font-weight: 700;
  margin-bottom: 16px;
  background: linear-gradient(135deg, #ffffff 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  line-height: 1.3;
}

.channel-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16px;
  flex-wrap: wrap;
}

.channel-name {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 0;
}

.country-badge {
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(232, 121, 249, 0.15);
  padding: 6px 14px;
  border-radius: 20px;
  border: 1px solid rgba(232, 121, 249, 0.3);
  margin: 0;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6px;
}

.subscriber-count {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(100, 108, 255, 0.15);
  padding: 6px 14px;
  border-radius: 20px;
  border: 1px solid rgba(100, 108, 255, 0.3);
  margin: 0;
  font-weight: 500;
}

/* Statistics Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 24px;
  margin-bottom: 50px;
}

.stat-card {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.1) 0%, rgba(232, 121, 249, 0.05) 100%);
  border: 2px solid rgba(100, 108, 255, 0.3);
  border-radius: 20px;
  padding: 32px 24px;
  text-align: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20px);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #646cff, #e879f9);
  transform: scaleX(0);
  transition: transform 0.4s ease;
}

.stat-card:hover::before {
  transform: scaleX(1);
}

.stat-card:hover {
  transform: translateY(-8px);
  border-color: rgba(100, 108, 255, 0.7);
  box-shadow: 0 12px 40px rgba(100, 108, 255, 0.4), 0 0 0 1px rgba(100, 108, 255, 0.1);
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.15) 0%, rgba(232, 121, 249, 0.1) 100%);
}

.stat-icon {
  font-size: 3rem;
  margin-bottom: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 4px 8px rgba(100, 108, 255, 0.3));
}

.stat-icon svg {
  width: 3rem;
  height: 3rem;
}

.stat-value {
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 8px;
  background: linear-gradient(135deg, #ffffff 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
}

.stat-label {
  font-size: 1.05rem;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 0.85rem;
}

/* Details Stack - Vertical Layout */
.details-stack {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-bottom: 40px;
}

.detail-card-full {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(100, 108, 255, 0.05) 100%);
  border: 2px solid rgba(100, 108, 255, 0.25);
  border-radius: 16px;
  padding: 28px;
  backdrop-filter: blur(20px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  width: 100%;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.detail-card-full:hover {
  border-color: rgba(100, 108, 255, 0.5);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(100, 108, 255, 0.08) 100%);
  box-shadow: 0 8px 30px rgba(100, 108, 255, 0.2);
  transform: translateY(-2px);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 12px;
}

.detail-header h3 {
  font-size: 1.4rem;
  font-weight: 700;
  margin: 0;
  background: linear-gradient(135deg, #ffffff 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: flex;
  align-items: center;
  gap: 12px;
  letter-spacing: -0.3px;
}

.section-icon {
  font-size: 1.6rem;
  background: linear-gradient(135deg, #646cff 0%, #e879f9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  flex-shrink: 0;
  filter: drop-shadow(0 2px 4px rgba(100, 108, 255, 0.3));
}

/* Button Group */
.button-group {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

/* Regenerate Button */
.regenerate-btn {
  padding: 10px 18px;
  background: linear-gradient(135deg, rgba(232, 121, 249, 0.25) 0%, rgba(192, 132, 252, 0.15) 100%);
  border: 2px solid rgba(232, 121, 249, 0.4);
  border-radius: 10px;
  color: #e879f9;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  gap: 7px;
  box-shadow: 0 2px 8px rgba(232, 121, 249, 0.2);
  min-height: 44px;
  touch-action: manipulation;
  user-select: none;
}

.regenerate-btn svg {
  font-size: 1.05rem;
  flex-shrink: 0;
}

.regenerate-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, rgba(232, 121, 249, 0.35) 0%, rgba(192, 132, 252, 0.25) 100%);
  border-color: rgba(232, 121, 249, 0.7);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(232, 121, 249, 0.4);
  color: #ffffff;
}

.regenerate-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.mini-spinner {
  width: 14px;
  height: 14px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-top-color: #e879f9;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* Copy Button */
.copy-btn {
  padding: 10px 18px;
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.25) 0%, rgba(232, 121, 249, 0.15) 100%);
  border: 2px solid rgba(100, 108, 255, 0.4);
  border-radius: 10px;
  color: #b8c1ff;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  gap: 7px;
  box-shadow: 0 2px 8px rgba(100, 108, 255, 0.2);
  min-height: 44px;
  touch-action: manipulation;
  user-select: none;
}

.copy-btn svg {
  font-size: 1.05rem;
  flex-shrink: 0;
}

.copy-btn:hover {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.35) 0%, rgba(232, 121, 249, 0.25) 100%);
  border-color: rgba(100, 108, 255, 0.7);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(100, 108, 255, 0.4);
  color: #ffffff;
}

/* Download Button */
.download-btn {
  padding: 10px 18px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.25) 0%, rgba(5, 150, 105, 0.15) 100%);
  border: 2px solid rgba(16, 185, 129, 0.4);
  border-radius: 10px;
  color: #6ee7b7;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  gap: 7px;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.2);
  min-height: 44px;
  touch-action: manipulation;
  user-select: none;
}

.download-btn svg {
  font-size: 1.05rem;
  flex-shrink: 0;
}

.download-btn:hover {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.35) 0%, rgba(5, 150, 105, 0.25) 100%);
  border-color: rgba(16, 185, 129, 0.7);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  color: #ffffff;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: rgba(255, 255, 255, 0.6);
  font-weight: 500;
}

.detail-value {
  color: #ffffff;
  font-weight: 600;
}

.income-value {
  color: #10b981 !important;
  font-weight: 700 !important;
  font-size: 1.05rem !important;
}

.copyright-warning {
  color: #fbbf24 !important;
  font-weight: 700 !important;
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.copyright-safe {
  color: #10b981 !important;
  font-weight: 700 !important;
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.music-info {
  flex-direction: column !important;
  align-items: flex-start !important;
}

.music-list {
  display: flex;
  flex-direction: column;
  gap: 6px;
  width: 100%;
}

.detail-value-full {
  width: 100%;
  margin-top: 8px;
}

.music-item {
  padding: 10px 14px;
  background: rgba(100, 108, 255, 0.1);
  border-radius: 8px;
  border-left: 3px solid #646cff;
  font-size: 0.95rem;
  line-height: 1.5;
  color: #ffffff;
}

.no-music {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
  padding: 8px 0;
}

/* Description Box */
.description-box {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8px;
  padding: 20px;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.8;
  max-height: 500px;
  overflow-y: auto;
  white-space: pre-wrap;
  word-wrap: break-word;
  font-size: 0.95rem;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.description-box::-webkit-scrollbar {
  width: 8px;
}

.description-box::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.description-box::-webkit-scrollbar-thumb {
  background: rgba(100, 108, 255, 0.5);
  border-radius: 4px;
}

.description-box::-webkit-scrollbar-thumb:hover {
  background: rgba(100, 108, 255, 0.7);
}

/* Tags */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  display: inline-block;
  padding: 6px 12px;
  background: rgba(100, 108, 255, 0.2);
  border: 1px solid rgba(100, 108, 255, 0.4);
  border-radius: 20px;
  font-size: 0.85rem;
  color: #a8b1ff;
  transition: all 0.3s ease;
}

.tag:hover {
  background: rgba(100, 108, 255, 0.3);
  transform: translateY(-2px);
}

.no-tags {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

/* Title Display */
.title-display {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  padding: 20px;
  color: #ffffff;
  font-size: 1.1rem;
  font-weight: 500;
  line-height: 1.6;
  word-wrap: break-word;
}

/* Hashtags Display */
.hashtags-display {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  padding: 16px;
  min-height: 60px;
}

.hashtag {
  display: inline-block;
  padding: 8px 16px;
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.25) 0%, rgba(232, 121, 249, 0.15) 100%);
  border: 2px solid rgba(100, 108, 255, 0.4);
  border-radius: 25px;
  font-size: 0.95rem;
  font-weight: 600;
  color: #b8c1ff;
  transition: all 0.3s ease;
  cursor: default;
}

.hashtag:hover {
  background: linear-gradient(135deg, rgba(100, 108, 255, 0.35) 0%, rgba(232, 121, 249, 0.25) 100%);
  border-color: rgba(100, 108, 255, 0.6);
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(100, 108, 255, 0.3);
  color: #ffffff;
}

/* Thumbnails */
.thumbnail-display {
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8px;
  padding: 20px;
  min-height: 200px;
}

.main-thumbnail {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  border: 1px solid rgba(100, 108, 255, 0.3);
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.main-thumbnail:hover {
  border-color: rgba(100, 108, 255, 0.6);
  box-shadow: 0 8px 30px rgba(100, 108, 255, 0.4);
  transform: scale(1.02);
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Footer */
.footer {
  margin-top: auto;
  padding: 20px;
  text-align: center;
  border-top: 1px solid rgba(100, 108, 255, 0.2);
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
}

.copyright {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 6px;
}

.credit {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.7);
  display: inline;
}

.author {
  font-weight: 700;
  background: linear-gradient(135deg, #e879f9 0%, #a8b1ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: 1.1rem;
}

/* Responsive Design */
